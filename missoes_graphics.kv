<Tela>:
    legenda_text_input:legenda
    orientation: 'vertical'
    canvas.before:
        Color:
            rgb:0.259,0.553,0.8
        Rectangle:
            pos:self.pos
            size:self.size
    Label:
        id:missao
        text:'MISSAO: Tire uma foto dando um chute no ar!'
        font_size:30
    Label:
        id:label
        text:'Digite uma legenda para sua foto:'
        font_size:25
    TextInput:
        id:legenda
        size_hint:[.4,.3]
        pos_hint:{'x':.3}
    Label:
        id:label_vazia
        text:' '
    Button:
        id:b_upload
        text:'Tirar foto'
        size_hint: [.4,.4]
        pos_hint: {'x':.3}
        on_press:root.recebe()
        #background_color: .749, .961, 1, 1
    Label:
        id:label_vazia2
        text:' '
