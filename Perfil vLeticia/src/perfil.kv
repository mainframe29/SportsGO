#:kivy 1.10.1

			
<Perfil>:
    lblTxt: lblUser
	cols: 1
    rows: 2
    spacing: [0, 60] #spacing between children: [horizontal, vertical].
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source:'fundoFeed.jpg'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        Button:
			size: self.size
			text: 'Sair'
            font_size: 25
			size_hint: 0.5, 0.6
			pos_hint: {'center_y': 0.6}
			italic: True
            background_color: 0.29411764705882352941176470588235, 0.63137254901960784313725490196078, 0.91764705882352941176470588235294, 1
            background_normal: ''
        Label:
            id: lblUser
            text: '@'+root.puxaUsuario()
            font_size: 25
            size_hint: 1, 0.6
            pos_hint: {'center_y': 0.6}
            color: 0, 0, 0, 1
            bold: True
        Label: #~~~~icon~~~~#
            size_hint: 0.5, 0.6
            canvas:
			    Color: 
					rgb: 1, 1, 1, 1
				Ellipse:
					pos: self.center_x*0.95, self.center_y*0.9
