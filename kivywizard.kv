<ScreenManagement>:
    Cadastro_ou_login:
    TelaCadastro:
	Login:
    PaginaInicial:
    LabelConfig:
    Missoes:
	Tela:
    Perfil:

<Cadastro_ou_login>:
    orientation: 'vertical'
    padding: [0,0,0,30]
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source:'fundoFeed.jpg'
    BoxLayout:
        orientation: 'vertical'
        Image:
            id:logo
            source:'logo.png'
        Button:
            id:b_cadastro
            text:'Criar conta'
            italic:True
            background_color: 0.29411764705882352941176470588235, 0.63137254901960784313725490196078, 0.91764705882352941176470588235294, 1
            background_normal: ''
            size_hint:[.3,.2]
            pos_hint:{'x':0.35}
            font_size:30
            on_press: app.root.switch_to_Cadastra()
        Label:
            text:' '
            size_hint:[.3,.01]
            pos_hint:{'x':0.35}
        Button:
            id:b_login
            text:'Login'
            italic:True
            background_color: 0.29411764705882352941176470588235, 0.63137254901960784313725490196078, 0.91764705882352941176470588235294, 1
            background_normal: ''
            size_hint:[.3,.2]
            pos_hint:{'x':0.35}
            font_size:30
            on_press: app.root.switch_to_Login()
        #Label:
            #text:' '
            #size_hint:[.3,.2]
            #pos_hint:{'x':0.35}
<Perfil>:
    name: 'perfil'
    lblTxt: lblUser
	cols: 1
    rows: 2
    spacing: [0, 60] #spacing between children: [horizontal, vertical].
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source:'fundoFeed.jpg'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        Button:
			size: self.size
			text: 'Voltar'
            font_size: 25
			size_hint: 0.5, 0.6
			pos_hint: {'center_y': 0.6}
			italic: True
            background_color: 0.29411764705882352941176470588235, 0.63137254901960784313725490196078, 0.91764705882352941176470588235294, 1
            background_normal: ''
			on_press: app.root.switch_to_paginaInicial()
        Label:
            id: lblUser
            text: '@'
            font_size: 25
            size_hint: 1, 0.6
            pos_hint: {'center_y': 0.6}
            color: 0, 0, 0, 1
            bold: True
        Label: #~~~~icon~~~~#
            size_hint: 0.5, 0.6
            canvas:
			    Color: 
					rgb: 1, 1, 1, 1
				Ellipse:
					pos: self.center_x*0.95, self.center_y*0.9
					size: 100, 100
                    source: 'jeonghan.jpg'
            
	
<PaginaInicial>:    
    name: 'paginaInicial'
    infTxt: info
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Rectangle:
                pos:self.pos
                size:self.size
                source:'fundoFeed.jpg'
        Label:
            text:' '
        Label:
            text: 'Sports GO! - Pagina Inicial'    
            color:[0,0,0,1]
            font_size:30     
        Label:
            id: info
            color:[0,0,0,1]
        Button:
            on_release: app.root.switch_to_Perfil()
            text: 'Minha Conta'
            size_hint: 0.4,0.4
            pos_hint: {'x': 0.3}
        Button:
            on_release: app.root.switch_to_labelConfig(), root.validar()
            text: 'Ir para Quiz'
            size_hint: 0.4,0.4
            pos_hint: {'x': 0.3}
        Button:
            on_release: app.root.switch_to_missoes()
            text: 'Ir para Missoes'
            size_hint: 0.4,0.4
            pos_hint: {'x': 0.3}
		Button:
            on_release: app.root.switch_to_esporteDia()
            text: 'Ir para o Esporte do Dia'
            size_hint: 0.4,0.4
            pos_hint: {'x': 0.3}
        Label:
            text:' '

<TelaCadastro>:
	name: 'telaCadastro'
	name_text_input: nome
	usuario_text_input: usuario
	email_text_input: email
	senha_text_input: senha
	BoxLayout:
		orientation: 'vertical'
		#padding: [1, 0, 0.5, 1]
		canvas.before:
			Color:
				rgb: 0.3, 0.7, 1
			Rectangle:
				pos: self.pos
				size: self.size
		Label:
			text: 'Novo cadastro'
			bold: True
			font_size: 35
			#color: [0.9019607843137255, 0.6, 1, 1]
		Label:
			size: self.texture_size
			text: 'Nome:'
		TextInput:
			id: nome
			size_hint: 0.3, 0.8 #width, height
			pos_hint: {'center_x': .5, 'center_y': .5}
			multiline: False
			focus: True
			
		Label:
			size: self.texture_size
			text: 'Usuario:'
		TextInput:
			id: usuario
			size_hint: 0.3, 0.8
			pos_hint: {'center_x': .5, 'center_y': .5}
			multiline: False
		Label:
			size: self.texture_size
			text: 'E-Mail:'
		TextInput:
			id: email
			size_hint: 0.3, 0.8
			pos_hint: {'center_x': .5, 'center_y': .5}
			multiline: False
		Label:
			size: self.texture_size
			text: 'Senha:'
		TextInput:
			id: senha
			size_hint: 0.3, 0.8
			pos_hint: {'center_x': .5, 'center_y': .5}
			multiline: False
			password: True
		Label:
		Button:
			text: 'Cadastrar'
			size_hint: 0.3, 0.8
			pos_hint: {'center_x': .5, 'center_y': .5}
			font_size: 30
			background_color: [0.9019607843137255, 0.6, 1, 1]
			#color: [0.9019607843137255, 0.6, 1, 1]
			on_press: root.insert_user()

<LabelConfig>:
    name: 'labelConfig'
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source:'fundoFeed.jpg'
	
<Login>:
    name: 'login'
    usuTxt: usuario
    senhTxt: senha
	
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source:'fundoFeed.jpg'
    
    BoxLayout:
        orientation: 'vertical'
        Label:
            id:label_vazia3
            text:' '
        Label: 
            text: 'Digite seu usuario'
            font_size: 30
            size_hint: 0.4,0.4
            pos_hint: {'x': 0.2}
            color:[0,0,0,1]
        TextInput:
            id: usuario
            size_hint: 0.5,0.4
            pos_hint: {'x': 0.25}
        Label:
            text: 'Digite sua senha'
            font_size: 30
            size_hint: 0.4,0.4
            pos_hint: {'x': 0.2}
            color:[0,0,0,1]
        TextInput:
            id: senha
            password: True
            size_hint: 0.5,0.4
            pos_hint: {'x': 0.25}
        Label:
            text: ''
            size_hint: 0.4,0.4
        Button:
            on_press: root.recebe()
            text: 'Entrar'                                              
            font_size: 30                                               
            size_hint: 0.5,0.4
            pos_hint: {'x': 0.25}
        Label:
            text: ''
            size_hint: 0.4,0.4
<Missoes>:
    name: 'missoes'
    legenda_text_input:legenda
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            background_image: 'white_background.png'
            background_color: 0.29411764705882352941176470588235, 0.63137254901960784313725490196078, 0.91764705882352941176470588235294, 1
            ActionView:
                ActionPrevious:
                    title: 'Perfil'
                    on_release: app.root.switch_to_paginaInicial() #vai para a pag inicial por enquanto
                ActionButton:
                    text:'Esporte do dia'
                    on_release: app.root.switch_to_esporteDia() #vai para a pag esporte do dia
                ActionButton:
                    text:'Missoes'
                    on_release: app.root.switch_to_missoes() #vai para a pag de missoes
                ActionButton:
                    text:'Quiz'
                    on_release: app.root.switch_to_labelConfig() #vai para a pag do quiz
                ActionButton:
                    text:'Esportes'
                ActionButton:
                    text:'Parcerias'
        BoxLayout:
            orientation: 'vertical'
            canvas.before:
			    Color:
				    rgb: 1, 1, 1
			    Rectangle:
				    pos: self.pos
                    size: self.size
            Label:
                id:label_vazia4
                text:' '
            Label:
                id:missao
                text:'MISSAO: Tire uma foto dando um chute no ar!'
                font_size:30
                color:[0,0,0,1]
            Label:
                id:label
                text:'Digite uma legenda para sua foto:'
                font_size:25
                color:[0,0,0,1]
            TextInput:
                id:legenda
                size_hint:[.4,.6]
                pos_hint:{'x':.3}
            Label:
                id:label_vazia
                text:' '
            Button:
                id:b_upload
                text:'Tirar foto'
                size_hint: [.4,.6]
                pos_hint: {'x':.3}
                on_press:root.recebe()
                #background_color: .749, .961, 1, 1
            Label:
                id:label_vazia2
                text:' '
            Label:
                id:label_vazia5
                text:' '
<Tela>:
	name: 'esporteDia'
	BoxLayout:
		orientation:'vertical'
		canvas.before:
			Rectangle:
				pos:self.pos
				size:self.size
				source:'fundoFeed.jpg'
		Label:
			id:nome
			text:root.get_name()
			size_hint:[.2,.1]
			pos_hint:{'x':.4}
			font_size:50
			color:[0,0,0,1]
		Label:
			id:historia
			text:root.hist_plus_rules()
			size_hint:[.5,.5]
			pos_hint:{'x':.25,'y':.7}
			text_size: (930,None)
			color:[0,0,0,1]
		Button: 
			text: 'Voltar'
            on_release: app.root.switch_to_paginaInicial()
            size_hint: 0.1,0.08
            pos_hint: {'x': 0.03}
		Button: 
			text: 'Iniciar Quiz'
            on_release: app.root.switch_to_labelConfig()
            size_hint: 0.09,0.09
            pos_hint: {'x': .45}