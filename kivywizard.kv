<ScreenManagement>:
    Login:
    PaginaInicial:
    LabelConfig:
    Missoes:
	
 
<PaginaInicial>:    
    name: 'paginaInicial'
    usuTxt: info
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Rectangle:
                pos:self.pos
                size:self.size
                source:'fundoFeed.jpg'
        Label:
            text:' '
        Label:
            text: 'Sports GO! - Pagina Inicial'    
            color:[0,0,0,1]
            font_size:30     
        Label:
            id: info
            text: 'Nome, @nick --- pontos: 0'
            color:[0,0,0,1]
        Button:
            on_release: app.root.switch_to_labelConfig()
            text: 'Ir para Quiz'
            size_hint: 0.4,0.4
            pos_hint: {'x': 0.3}
        Button:
            on_release: app.root.switch_to_missoes()
            text: 'Ir para Missoes'
            size_hint: 0.4,0.4
            pos_hint: {'x': 0.3}
        Label:
            text:' '
    
<LabelConfig>:
    name: 'labelConfig'
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source:'fundoFeed.jpg'
	
<Login>:
    name: 'login'
    usuTxt: usuario
    senhTxt: senha
	
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source:'fundoFeed.jpg'
    
    BoxLayout:
        orientation: 'vertical'
        Label:
            id:label_vazia3
            text:' '
        Label: 
            text: 'Digite seu usuario'
            font_size: 30
            size_hint: 0.4,0.4
            pos_hint: {'x': 0.2}
            color:[0,0,0,1]
        TextInput:
            id: usuario
            size_hint: 0.5,0.4
            pos_hint: {'x': 0.25}
        Label:
            text: 'Digite sua senha'
            font_size: 30
            size_hint: 0.4,0.4
            pos_hint: {'x': 0.2}
            color:[0,0,0,1]
        TextInput:
            id: senha
            password: True
            size_hint: 0.5,0.4
            pos_hint: {'x': 0.25}
        Label:
            text: ''
            size_hint: 0.4,0.4
        Button:
            on_press: root.recebe()
            text: 'Entrar'                                              
            font_size: 30                                               
            size_hint: 0.5,0.4
            pos_hint: {'x': 0.25}
        Label:
            text: ''
            size_hint: 0.4,0.4
<Missoes>:
    name: 'missoes'
    legenda_text_input:legenda
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Rectangle:
                pos:self.pos
                size:self.size
                source:'fundoFeed.jpg'
        Label:
            id:label_vazia4
            text:' '
        Label:
            id:missao
            text:'MISSAO: Tire uma foto dando um chute no ar!'
            font_size:30
            color:[0,0,0,1]
        Label:
            id:label
            text:'Digite uma legenda para sua foto:'
            font_size:25
            color:[0,0,0,1]
        TextInput:
            id:legenda
            size_hint:[.4,.6]
            pos_hint:{'x':.3}
        Label:
            id:label_vazia
            text:' '
        Button:
            id:b_upload
            text:'Tirar foto'
            size_hint: [.4,.6]
            pos_hint: {'x':.3}
            on_press:root.recebe()
            #background_color: .749, .961, 1, 1
        Label:
            id:label_vazia2
            text:' '
        Button:
            on_release: app.root.switch_to_paginaInicial()
            text:'Voltar'
            size_hint: [.4,.6]
            pos_hint: {'x':.3}
        Label:
            id:label_vazia5
            text:' '