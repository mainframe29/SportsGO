                    Rectangle:
                        id: imgPost
                        pos: self.pos
                        size: self.size
                        source: 'bp.jpg'
            Label:
                id: legendaPost
                text: 'legendaaaaAAaaAAAAAaa'
                color: 0, 0, 0, 1
                font_size: 15
            Label:
